<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.3.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_3_0.dtd">

<service-builder dependency-injector="ds" package-path="com.techsocialist.servicebuilder">
	<namespace>TS</namespace>

	<entity  local-service="true" name="ProductionHouse" remote-service="false" uuid="false" table="production_house_register">

		<column name="id" primary="true" type="long" />
		<column name="userId" type="long" />

		<column name="name" type="String" />
		<column name="cin" type="String" />
		<column name="logo" type="Blob" />
		<column name="banner" type="Blob" />

		<column name="landline" type="String" />

		<column name="websiteUrl" type="String" />

		<column name="addressLine1" type="String" />
		<column name="addressLine2" type="String" />
		<column name="addressLine3" type="String" />
		<column name="place" type="String" />
		<column name="state" type="String" />
		<column name="country" type="String" />
		<column name="pincode" type="String" />

		<column name="status" type="String" />

		<column name="contactPersonFirstName" type="String" />
		<column name="contactPersonLastNameName" type="String" />
		<column name="contactPersonMobile" type="String" />
		<column name="contactPersonEmail" type="String" />
		<column name="userName" type="String" />
		<column name="password" type="String" />

		<column name="createdBy" type="String" />
		<column name="modifiedBy" type="String" />
		<column name="createdDate" type="Date" />
		<column name="modifiedDate" type="Date" />

	</entity>

	<entity  local-service="true" name="Video" remote-service="false" uuid="false" table="video_register">

		<column name="id" primary="true" type="long" />
		<column name="userId" type="long" /> <!-- should not be null -->
		<column name="productionHouseId" type="long" /> <!-- is applicable only when the video is of type Feature_Film -->
		<column name="name" type="String" />
		<column name="thumbnail" type="Blob" />
		<column name="content" type="Blob" />

		<column name="type" type="String" /> <!-- Teaser, Trailer, Feature_Film, Short_Film, Documentry, Individual_Video -->
		<column name="status" type="String" /> <!-- Uploaded, Published -->

		<column name="ticketPrice" type="double" /> <!-- is applicable only when the video is of the type Feature_Film-->

		<column name="publishDateTime" type="long" /> <!-- the date and time to make the video available for the general user -->

		<column name="createdBy" type="String" />
		<column name="modifiedBy" type="String" />
		<column name="createdDate" type="Date" />
		<column name="modifiedDate" type="Date" />

	</entity>

	<entity  local-service="true" name="Poster" remote-service="false" uuid="false" table="poster_register">

		<column name="id" primary="true" type="long" />
		<column name="productionHouseId" type="long" />
		<column name="name" type="String" />

		<column name="content" type="Blob" />

		<column name="type" type="String" /> <!--Motion_Poster,  -->
		<column name="status" type="String" />

		<column name="publishDateTime" type="long" />

		<column name="createdBy" type="String" />
		<column name="modifiedBy" type="String" />
		<column name="modifiedDate" type="Date" />
		<column name="createdDate" type="Date" />

	</entity>

	<entity  local-service="true" name="Ticket" remote-service="false" uuid="false" table="ticket_register">

		<column name="id" primary="true" type="long" />
		<column name="userId" type="long" />
		<column name="videoId" type="long" />
		<column name="ticketPriceId" type="long" /> <!-- should not be null if the video is of the type Feature Film-->
		<column name="ticketTaxId" type="long" /> <!-- should not be null if the video is of the type Feature Film-->

		<column name="status" type="String" />

		<column name="purchaseTime" type="Date" />
		<column name="soldTime" type="Date" />

		<column name="createdDate" type="Date" />
		<column name="modifiedDate" type="Date" />

	</entity>

	<entity  local-service="true" name="TicketPrice" remote-service="false" uuid="false" table="ticket_price_register">
		<column name="id" primary="true" type="long" />
		<column name="price"  type="long" />

		<column name="createdBy" type="String" />
		<column name="modifiedBy" type="String" />

		<column name="createdDate" type="Date" />
		<column name="modifiedDate" type="Date" />
	</entity>

	<entity  local-service="true" name="TicketTax" remote-service="false" uuid="false" table="ticket_tax_register">
		<column name="id" primary="true" type="long" />
		<column name="percent"  type="long" />
		<column name="enabled"  type="boolean" />

		<column name="createdBy" type="String" />
		<column name="modifiedBy" type="String" />

		<column name="createdDate" type="Date" />
		<column name="modifiedDate" type="Date" />
	</entity>

</service-builder>